{
  "num_layers": 2,
  "popart_dtype": "FLOAT16",
  "no_dropout": true,
  "loss_scaling": 1.0,
  "stochastic_rounding": true,
  "custom_ops": [
    "attention"
  ],
  "batches_per_step": 30,
  "gradient_accumulation_factor": 4,
  "epochs": 150,
  "epochs_per_save": 150,
  "input_files": [
    "data/sample_text.bin"
  ],
  "shuffle": true,
  "no_validation": true,
  "use_default_available_memory_proportion": true,
  "disable_fully_connected_pass": true,
  "projection_serialization_steps": 4
}